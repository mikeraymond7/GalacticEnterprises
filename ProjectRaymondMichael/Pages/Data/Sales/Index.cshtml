@page
@model ProjectRaymondMichael.Pages.Data.Sales.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Emp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Item)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sale) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SaleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SaleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SaleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
